<div class="col-sm-8" id="main-column">
	<div class="posts">
		<% posts.forEach(function (post) { %>
		<%- 	partial('components/post.ejs', { post: post }) %>
		<% }) %>
	</div>

	<% if (numberOfPages > 1) { %>
	<div class="text-center">
		<ul class="pagination">
			<% 	for (var page = 1; page <= numberOfPages; ++page) { %>
			<li<%- page === currentPage ? ' class="active"' : '' %>><a href="/topics/<%= topic.slug %>/page/<%= page %>"><%= page %></a></li>
			<% 	} %>
		</ul>
	</div>
	<% } %>
</div>

<div class="col-sm-3 col-sm-offset-1">
	<h4>Topics</h4>
	<ul class="list-unstyled">
		<% topics.forEach(function (_topic) { %>
		<li><a href="/topics/<%= _topic.slug %>"><%- _topic.id === topic.id ? '<b>' : '' %><%= _topic.name %><%- _topic.id === topic.id ? '</b>' : '' %></a></li>
		<% }) %>
	</ul>
</div>